<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_gradient"
    tools:context="com.example.puneeth.resumex.HomePage"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/logo"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/profile_photo"
            android:transitionName="profile_photo"
            android:id="@+id/profile_photo"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:text="Puneeth N Naik"
            android:transitionName="profile_text"
            android:id="@+id/profile_text"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="110dp"
            android:background="@mipmap/card"
            android:layout_marginLeft="5dp"
            android:gravity="center"

            android:id="@+id/academics"
            >
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/academics"
                android:id="@+id/academics_icon"
                android:transitionName="academics_icon"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="110dp"
            android:background="@mipmap/card"
            android:layout_marginLeft="1dp"
            android:id="@+id/portfolio"

            android:gravity="center"
            >
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/portfolio"
                android:id="@+id/portfolio_icon"
                android:transitionName="portfolio_icon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="110dp"
            android:background="@mipmap/card"
            android:layout_marginLeft="1dp"
            android:id="@+id/accomplishments"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/accomplishments"
                android:id="@+id/accomplishments_icon"
                android:transitionName="accomplishments_icon"
                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
